# PIKA Configuration

# App settings
APP_NAME=PIKA
DEBUG=false

# Ollama settings
# For local development: http://localhost:11434
# For Docker deployment: http://ollama:11434
OLLAMA_BASE_URL=http://localhost:11434
# llama3.1:8b is the recommended model for GPU; use phi3:mini for CPU-only evaluation
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=120

# RAG settings
CHUNK_SIZE=500
CHUNK_OVERLAP=50
TOP_K=5

# Document settings
DOCUMENTS_DIR=./documents

# Vector store settings
CHROMA_PERSIST_DIR=./data/chroma
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Confidence thresholds (0.0 - 1.0)
CONFIDENCE_HIGH=0.7
CONFIDENCE_MEDIUM=0.5
CONFIDENCE_LOW=0.3

# Authentication settings (optional - uncomment to enable)
# Password for admin page - if not set, admin is open
# PIKA_ADMIN_PASSWORD=your-secure-password-here
# API key for API endpoints - if not set, API is open
# PIKA_API_KEY=your-api-key-here
# Secret for session cookies (change in production!)
# PIKA_SESSION_SECRET=change-me-to-random-string

# Audit settings
AUDIT_LOG_PATH=./data/audit.log
